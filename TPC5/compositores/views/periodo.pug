extends layout

block content
  .w3-card-4
    header.w3-container.w3-green
      h1= titulo
    .w3-container
      //- Check if periodo is defined and then if periodo.list is not null
      if periodo && periodo.list != null
        h3 Ids
        ul
          each code in periodo.list
            li
              a(href="/periodos/" + code) #{code}
      else
        p No records found.
    footer.w3-container.w3-green
      address Gerado por a100902::EngWeb2024 em #{data}
